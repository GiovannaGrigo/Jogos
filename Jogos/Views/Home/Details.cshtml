@model Jogos.ViewModels.DetailsVM
@{
    ViewData["Title"] = "Genero";
}

<div class="container text-white">
    <div class="row p-4">
        <div class="col text-center">
            @if(Model.Anterior != null)
            {
                <a asp-action="Details" asp-route-id="@Model.Anterior.Id" class="btn btn-lg btn-outline-danger text-white">
                    @Model.Anterior.Nome
                </a>
            }
        </div>
        <div class="col text-center">
            <h1 class="fs-1">@Model.Atual.Nome</h1>
        </div>
        <div class="col text-center">
            @if(Model.Proximo != null)
            {
                <a asp-action="Details" asp-route-id="@Model.Proximo.Id" class="btn btn-lg btn-outline-danger text-white">@Model.Proximo.Nome</a>
            }
        </div>
    </div>

    <div class="row ">
        <div class="col-lg-5 p-0 gameImage">
            <img class="img-fluid cursor-pointer" src="@Model.Atual.Imagem" alt="@Model.Atual.Nome">
        </div>
        <div class="col-lg-7 fs-5 mt-4">
            <p class="mb-3"><strong>Descrição:</strong> @Model.Atual.Descricao</p>
            <p class="fw-bold">Gênero</p>
            <div class="d-flex gap-2 my-2">
                @foreach(var genero in Model.Atual.Generos )
                {
                    <a href="#" class="btn btn-lg text-white" style="background-color:@genero.Genero.Cor">@genero.Genero.Nome</a>
                }
            </div>
        </div>
    </div>
</div>